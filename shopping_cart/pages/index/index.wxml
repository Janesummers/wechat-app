<!--index.wxml-->
<view wx:for="{{list}}" wx:for-index="index" wx-for-item="item" wx:key="{{list.id}}" wx:if="{{list_show}}">
  <text>goods name：</text>
  <text class='goods_name'>{{item.name}}\n</text>
  <text>price：</text>
  <text class='price'>{{item.price}}</text>
  <button bindtap='add' data-goodsData="{{item}}">add to shopping cart</button>
</view>
<view wx:for="{{shopping_cart_list}}" wx:for-index="index" wx-for-item="item" wx:key="{{shopping_cart_list.id}}" wx:if="{{!list_show}}">
  <text>goods name：</text>
  <text class='goods_name'>{{item.name}}\n</text>
  <text>goods number：</text>
  <button class='decrease' bindtap='decrease' data-id="{{item.id}}">-</button>
  <input class='num' value='{{item.num}}'></input>
  <button class='increase' bindtap='increase' data-id="{{item.id}}">+</button>
  <text>\n</text>
  <text>price：</text>
  <text class='price'>{{item.price}}\n</text>
  <text>total price：</text>
  <text class='total_price'>{{item.price * item.num}}</text>
  <button bindtap='del' data-id="{{index}}">delect</button>
</view>
<view class='bottom_nav'>
  <button bindtap='show_goods'>goods</button>
  <button bindtap='show_shopping_cart'>shopping cart</button>
</view>