/**index.wxss**/
page{
  padding-bottom: 40px
}
.bottom_nav{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 40px;
}
.bottom_nav button{
  width: 50%;
  height: 40px;
  float: left;
  border-radius: 0;
  font-size: 14px;
  line-height: 40px;
}
.bottom_nav button::after{
  border:none;
}
.decrease,.increase{
  width: 40px;
  height: 20px;
  line-height: 20px;
  display: inline-block;
  text-align: center;
}
.num{
  display: inline-block;
  padding: 0 10px;
  width:40px;
  text-align: center;
}